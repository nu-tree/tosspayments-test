{
  "compilerOptions": {
    "target": "ES2017", // 대부분의 현대 브라우저 지원을 위한 ES2017 타겟
    "lib": ["dom", "dom.iterable", "esnext"], // 브라우저 DOM API 및 최신 JavaScript 기능 사용
    "allowJs": true, // JavaScript 파일도 TypeScript에서 처리 가능
    "skipLibCheck": true, // 라이브러리 타입 검사 건너뛰기 (빌드 속도 향상)
    "strict": true, // 엄격한 타입 검사 활성화
    "noEmit": true, // 실제 JavaScript 파일 생성하지 않음 (Next.js가 처리)
    "esModuleInterop": true, // CommonJS와 ES6 모듈 간 호환성
    "module": "esnext", // ES 모듈 시스템 사용
    "moduleResolution": "bundler", // Bundler 방식의 모듈 해석 (Next.js/Turbopack 호환)
    "resolveJsonModule": true, // JSON 파일을 모듈로 import 가능
    "experimentalDecorators": true, // 데코레이터 문법 지원 (실험적 기능)
    "emitDecoratorMetadata": true, // 데코레이터 메타데이터 생성
    "isolatedModules": true, // 각 파일을 독립적인 모듈로 처리
    "jsx": "preserve", // JSX를 그대로 보존 (Next.js가 처리)
    "incremental": true, // 증분 컴파일 활성화 (빌드 속도 향상)
    "baseUrl": ".", // 절대 경로의 기준점 설정
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["src/*"], // @/로 시작하는 경로를 src/ 폴더로 매핑
      "@prisma-client/*": ["generated/*"] // Prisma 클라이언트 경로 별칭
    }
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "prisma/*.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", ".turbo", "dist", "coverage", "out", ".git", "generated/**/*"]
}
